      SPRINT innate_spell ~d5x%x_ind%i~
      SPRINT give_spell ~d5x%x_ind%g~
      SPRINT block_spell ~d5x%x_ind%b~
      SPRINT learn_spell ~d5x%x_ind%l~
      SPRINT switch_spell ~d5x%x_ind%h~
      SPRINT switch_subspell ~d5x%x_ind%w~
